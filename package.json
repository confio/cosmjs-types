{
  "name": "cosmjs-types",
  "version": "0.5.1",
  "description": "JS and TS types relating to Protocol Buffers used by Cosmos-SDK and other related projects",
  "contributors": [
    "Will Clark <willclarktech@users.noreply.github.com>"
  ],
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/confio/cosmjs-types"
  },
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "confio/",
    "cosmos/",
    "cosmos_proto/",
    "cosmwasm/",
    "gogoproto/",
    "google/",
    "ibc/",
    "tendermint/",
    "*.md",
    "!wasmd-*/**/*.md",
    "!cosmos-sdk-*/**/*.md"
  ],
  "scripts": {
    "format": "prettier --write --loglevel warn \"./src/**/*.ts\"",
    "codegen": "rm -rf ./src && ./scripts/codegen.js && yarn format",
    "prepare-publishing": "./scripts/prepare-publishing.sh",
    "build": "rm -rf ./build && tsc && npm run prepare-publishing"
  },
  "dependencies": {
    "long": "^4.0.0",
    "protobufjs": "~6.11.2"
  },
  "devDependencies": {
    "@osmonauts/telescope": "^0.45.0",
    "@types/long": "^4.0.1",
    "@types/node": "^15.6.2",
    "prettier": "^2.7.1",
    "typescript": "~4.7"
  }
}
